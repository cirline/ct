#!/bin/bash

cmd=`echo $0 | awk -F '/' '{print $NF}'`
option=h

echo "do command: $cmd"

case $cmd in
    "vinp" )
        if [ $# -gt 0 ]; then
            option=$1
        else
            option=h
        fi
        ;;
    "kh" )
        option=h;;
    "kb" )
        option=b;;
    "kp" )
        option=p;;
    "ku" )
        option=+;;
    "kd" )
        option=-;;
    # follow is virtual mouse action
    "mul" )
        adb shell input swipe 600 300 400 300
        exit 0;;
    "mcd" )
        adb shell input tap 750 250
        exit 0;;
    "mst" )
        adb shell input tap 50 200
        exit 0;;
    "mup" )
        adb shell input swipe 400 400 400 200
        exit 0;;
    "mct" )
        adb shell input tap 750 400
        exit 0;;
    * )
        echo "unknown key, exit"
        exit -1
        ;;
    esac

case $option in
    "P" | "p" )
        key=POWER
        ;;
    "H" | "h" )
        key=HOME
        ;;
    "B" | "b" )
        key=BACK
        ;;
    "+" )
        key=VOLUME_UP
        ;;
    "-" )
        key=VOLUME_DOWN
        ;;
    * )
        echo "unknown key, exit"
        exit -1
        ;;
esac

echo "send key $key"

adb shell input keyevent $key


