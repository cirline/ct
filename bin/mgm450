#!/bin/bash

mntdir=gm450
username=chenqiwei
hostname=codesvr
remotepath=/home/user/chenqiwei/1work/z15_sdk_v2.0/4.5inch

if [ ! -d $mntdir ]; then
    mkdir $mntdir
fi

#sshfs chenqiwei@codesvr:/home/user/chenqiwei/work1/z15_sdk_v2.0/4.5inch $mntdir

echo "mount GM450 path ($remotepath) -> ($mntdir)"

sshfs $username@$hostname:$remotepath $mntdir

cd $mntdir

exit 0


